<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_title"
        layout="@layout/title_bar"></include>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_selector_click"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_finish"
        android:layout_below="@id/layout_title"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:layout_marginTop="20dp"
                android:src="@color/line" />

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text="标题："
                    android:textColor="@color/black333"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_myrent_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="@null"
                    android:hint="请输入标题"
                    android:inputType="text"
                    android:textColor="@color/black333"
                    android:textColorHint="@color/text_main_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black333"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:src="@color/line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text="姓名："
                    android:textColor="@color/black333"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="@null"
                    android:hint="请输入申请人姓名"
                    android:inputType="text"
                    android:textColor="@color/black333"
                    android:textColorHint="@color/text_main_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black333"
                    android:textSize="15sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:layout_marginTop="@dimen/line"
                android:src="@color/line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text="性别："
                    android:textColor="@color/black333"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="@null"
                    android:hint="请输入性别"
                    android:inputType="text"
                    android:textColor="@color/black333"
                    android:textColorHint="@color/text_main_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black333"
                    android:textSize="15sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:layout_marginTop="@dimen/line"
                android:src="@color/line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text="年龄："
                    android:textColor="@color/black333"
                    android:textSize="15sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="@null"
                    android:hint="请输入年龄"
                    android:inputType="text"
                    android:textColor="@color/black333"
                    android:textColorHint="@color/text_main_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="岁"
                    android:textColor="@color/black333"
                    android:textSize="15sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:layout_marginTop="@dimen/line"
                android:src="@color/line" />
            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text="薪资："
                    android:textColor="@color/black333"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_myrent_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="@null"
                    android:hint="请输入薪资待遇"
                    android:inputType="number"
                    android:textColor="@color/black333"
                    android:textColorHint="@color/text_main_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="元/月"
                    android:textColor="@color/black333"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_line4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:src="@color/line" />

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text="联系方式："
                    android:textColor="@color/black333"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_myrent_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:background="@null"
                    android:hint="请输入联系方式"
                    android:inputType="number"
                    android:textColor="@color/black333"
                    android:textColorHint="@color/text_main_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/black333"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_line6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:src="@color/line" />





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="自我介绍："
                android:textColor="@color/black333"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:src="@color/line" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:gravity="top"
                android:hint="请简单介绍一下你自己"
                android:maxLength="100"
                android:maxLines="3"
                android:padding="10dp"
                android:textColor="@color/black333"
                android:textColorHint="@color/text_main_color"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:src="@color/line" />


            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="职位描述："
                android:textColor="@color/black333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_line10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:src="@color/line" />

            <EditText
                android:id="@+id/et_myrent_summary"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:gravity="top"
                android:hint="请简单介绍一下你想招聘的职位描述"
                android:inputType="textMultiLine"
                android:maxLength="100"
                android:maxLines="3"
                android:padding="10dp"
                android:textColor="@color/black333"
                android:textColorHint="@color/text_main_color"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_line11"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:src="@color/line" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#f0f0f0"
    android:orientation="vertical"

    tools:context=".activity.LoginActivity">
    <include layout="@layout/title_bar">

    </include>
    <com.android.bjl.widget.ClearEditText
        android:id="@+id/login_tv_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#e8e8e8"
        android:layout_marginTop="30dp"
        android:hint="请输入身份证号"
        android:padding="10dp"
        android:textSize="16sp"
        android:text=""
        android:inputType="number"
        android:digits="0123456789xX"
        android:gravity="center"
        android:textColor="#b4b4b4" />

    <com.android.bjl.widget.ClearEditText
        android:id="@+id/login_tv_pwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="#e8e8e8"
        android:hint="请输入登录密码"
        android:gravity="center"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:text=""
        android:textColor="#b4b4b4" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_selector_click"
        android:text="登录"

        android:textSize="@dimen/x34"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/login_forgetps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="15dp"
            android:textColor="#2e88ff"
            android:textSize="16sp"
            android:text="忘记密码" />


        <TextView
            android:id="@+id/login_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="#2e88ff"
            android:padding="15dp"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="免费注册" />
    </RelativeLayout>
</LinearLayout>
